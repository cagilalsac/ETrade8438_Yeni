@model ProductModel

@*@if (ViewData["Message"] is not null)
{
    <p class="text-danger">@ViewData["Message"]</p>
}*@

@*<form action="/Products/Create" method="post">*@
@*@using (Html.BeginForm("Create", "Products", FormMethod.Post))*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, null, new { @class = "text-danger" })
    <div class="mb-3">
        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
        @*<input type="text" class="form-control" name="Name">*@
        @*@Html.TextBox("Name", new { @class = "form-control" })*@
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger"})
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger"})
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.UnitPrice, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.UnitPrice, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UnitPrice, null, new { @class = "text-danger"})
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.StockAmount, new { @class = "form-label" })
        @Html.EditorFor(m => m.StockAmount)
        @Html.ValidationMessageFor(m => m.StockAmount, null, new { @class = "text-danger"})
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.ExpirationDate, new { @class = "form-label" })
        @Html.EditorFor(m => m.ExpirationDate)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.CategoryId, new { @class = "form-label" })
        @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.Categories, "-- Select -- ", new { @class = "form-control" }) @* (ViewBag.Categories as SelectList) *@
    </div>
    <button type="submit" class="btn btn-outline-success">Save</button>
    @:&nbsp;&nbsp;
    <text>&nbsp;&nbsp;</text>
    <button type="reset" class="btn btn-success">Reset</button>
    @*</form>*@
}