@model ProductModel

<form action="/Products/Create" method="post">
    <div class="mb-3">
        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
        @*<input type="text" class="form-control" name="Name">*@
        @*@Html.TextBox("Name", new { @class = "form-control" })*@
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.UnitPrice, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.UnitPrice, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.StockAmount, new { @class = "form-label" })
        @Html.EditorFor(m => m.StockAmount)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.ExpirationDate, new { @class = "form-label" })
        @Html.EditorFor(m => m.ExpirationDate)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.CategoryId, new { @class = "form-label" })
        @Html.DropDownListFor(m => m.CategoryId, null, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-outline-success">Save</button>
    &nbsp;&nbsp;
    <button type="reset" class="btn btn-success">Reset</button>
</form>